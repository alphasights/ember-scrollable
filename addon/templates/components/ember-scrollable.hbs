<div
  class='ember-scrollable tse-scrollable {{if this.horizontal 'horizontal'}} {{
    if this.vertical 'vertical'
  }}'
  {{did-insert this.elementInserted}}
  {{on-resize this.recalculate}}
>
  {{#if this.horizontal}}
    <EmberScrollbar
      @handleOffset={{this.horizontalHandleOffset}}
      @handleSize={{this.horizontalHandleSize}}
      @horizontal={{true}}
      @showHandle={{this.showHandle}}
      @isDragging={{this.isHorizontalDragging}}
      @onJumpTo={{action 'horizontalJumpTo'}}
      @onDrag={{action 'horizontalDrag'}}
      @onDragStart={{action 'horizontalDragBoundary' true}}
      @onDragEnd={{action 'horizontalDragBoundary' false}}
    />
  {{/if}}
  {{#if this.vertical}}
    <EmberScrollbar
      @handleOffset={{this.verticalHandleOffset}}
      @handleSize={{this.verticalHandleSize}}
      @horizontal={{false}}
      @showHandle={{this.showHandle}}
      @isDragging={{this.isVerticalDragging}}
      @onJumpTo={{action 'verticalJumpTo'}}
      @onDrag={{action 'verticalDrag'}}
      @onDragStart={{action 'verticalBoundaryEvent' true}}
      @onDragEnd={{action 'verticalBoundaryEvent' false}}
    />
  {{/if}}
  <ScrollContentElement
    @height={{this.scrollContentHeight}}
    @width={{this.scrollContentWidth}}
    @scrollToX={{this.scrollToX}}
    @scrollToY={{this.scrollToY}}
    @onScroll={{action 'scrolled'}}
  >
    <div class='tse-content scrollable-content'>
      {{yield
        (hash
          recalculate=this.recalculate
          update=(action 'update')
          scrollTop=(action 'scrollTop')
        )
      }}
    </div>
  </ScrollContentElement>
</div>